<p id="notice"><%= notice %></p>
<% restaurant = Restaurant.find(@menu_item.restaurant_id) %>

<p>
  <b>Restaurant:</b>
  <%= link_to restaurant.name, restaurant_path(restaurant) %>
</p>

<p>
  <b>Name:</b>
  <%= @menu_item.name %>
</p>

<p>
  <b>Price:</b>
  <%= @menu_item.price %>
</p>

<hr>
<h3>Ratings</h3>
<table>
  <tr>
    <td>Stars</td>
    <td>Description</td>
    <td></td>
    <td></td>
    <td></td>
  </tr>

  <% reviews = Review.where(:menu_item_id => @menu_item.id) %>
  <% reviews.each do |review| %>
    <tr>
      <td><%= review.stars.to_s %></td>
      <td><%= review.description %></td>
      <td><%= link_to "Show", restaurant_review_path(restaurant, review) %></td>
      <td><%= link_to "Edit", edit_restaurant_review_path(restaurant, review) %></td>
      <td><%= link_to "Destroy", restaurant_review_path(restaurant, review), :confirm => "Are you sure you want to delete this review?", :method => :delete %></td>
    </tr>
  <% end %>
</table>
<hr>

<%= link_to 'Back', restaurant_path(restaurant) %>
