<h1>Listing menu items for <%= @restaurant.name %></h1>

<table>
  <tr>
    <th>Name</th>
    <th>Price</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @menu_items.each do |menu_item| %>
  <tr>
    <td><%= menu_item.name %></td>
    <td><%= menu_item.price %></td>
    <td><%= link_to 'Show', restaurant_menu_item_path(@restaurant, menu_item) %></td>
    <td><%= link_to 'Edit', edit_restaurant_menu_item_path(@restaurant, menu_item) %></td> 
    <td><%= link_to 'Destroy', restaurant_menu_item_path(@restaurant, menu_item), :confirm => 'Are you sure?', :method => :delete %></td> 
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Menu item', new_restaurant_menu_item_path %><br/>
<%= link_to 'Back', restaurant_path(@restaurant) %>
